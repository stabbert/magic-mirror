{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "magic-mirror",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "scope": ["$CONFIG/com.tauri.magicmirror/config.json"]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "deb": {
        "depends": []
      },
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.tauri.magicmirror",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["resources/config.json"],
      "shortDescription": "",
      "targets": ["deb"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "fullscreen": false,
        "height": 1920,
        "resizable": true,
        "title": "Magic Mirror",
        "width": 1080
      }
    ]
  }
}
